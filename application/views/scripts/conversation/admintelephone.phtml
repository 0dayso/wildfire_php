<?php 
if(isset($this->log)){
	if(count($this->log)){
			echo "<center><h2>电话记录</h2></center>";
			foreach ($this->log as $val){
				if($val['consumer_id']==0){
					echo '<table width="100%"><tr><th align="left" width="10%">用户ID</th>';
					$columns = explode('$',$val['contents']);
					foreach($columns as $each){
						echo "<th align=\"left\">$each</th>";
					}				
					echo "</tr>";
				}else{
					echo "<tr><td align=\"left\">$val[consumer_id]";
					$columns = explode('$',$val['contents']);
					foreach($columns as $each){
						echo "<td align=\"left\">$each</td>";
					}
					echo "</tr>";
				}
			}	
	}else{
		echo "没有对应的电话记录";
	}
}

